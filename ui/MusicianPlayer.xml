<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns="http://www.blizzard.com/wow/ui/">

	<!-- Main player frame -->

	<Script file="MusicianPlayer.lua" />

	<Frame name="MusicianPlayer" inherits="MusicianDialogTemplateNoAnchor">
		<Size x="320" y="160" />

		<Frames>
			<Button parentKey="playButton" name="$parentPlayButton" inherits="MusicianIconTextProgressBarButtonTemplate">
				<Size x="120" y="22" />
				<Anchors>
					<Anchor point="BOTTOMRIGHT" x="-10" y="10" />
				</Anchors>
			</Button>

			<Button parentKey="bandPlayButton" name="$parentBandPlayButton" inherits="MusicianBandPlayButtonTemplate" hidden="true">
				<Anchors>
					<Anchor point="BOTTOM" y="10" />
				</Anchors>
			</Button>

			<Button parentKey="previousButton" name="$parentPreviousButton" inherits="MusicianIconButtonTemplate">
				<Size x="30" y="22" />
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="10" y="10" />
				</Anchors>
			</Button>

			<Button parentKey="previewButton" name="$parentPreviewButton" inherits="MusicianIconButtonTemplate">
				<Size x="30" y="22" />
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentPreviousButton" />
				</Anchors>
			</Button>

			<Button parentKey="nextButton" name="$parentNextButton" inherits="MusicianIconButtonTemplate">
				<Size x="30" y="22" />
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentPreviewButton" />
				</Anchors>
			</Button>

			<Slider parentKey="slider" name="$parentSlider" inherits="HorizontalSliderTemplate" defaultValue="1" minValue="1" maxValue="1" valueStep=".01" stepsPerPage="1000">
				<Size y="22" />
				<Anchors>
					<Anchor point="BOTTOM" relativeTo="$parentPlayButton" relativePoint="TOP" x="0" y="0" />
					<Anchor point="LEFT" x="15" />
					<Anchor point="RIGHT" x="-15" />
				</Anchors>
				<HitRectInsets>
					<AbsInset left="0" right="0" top="0" bottom="0" />
				</HitRectInsets>
				<ThumbTexture parentKey="Thumb" name="$parentThumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
					<TexCoords left="0.375" right="0.625" />
					<Size x="8" y="32" />
				</ThumbTexture>
			</Slider>

		</Frames>
	</Frame>
</Ui>